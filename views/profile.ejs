<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="../modal_page.css">
  <link rel="stylesheet" href="../second_navmenu.css">
  <script src="https://kit.fontawesome.com/d8ab0e903f.js"></script>
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
    integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
    integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
    crossorigin="anonymous"></script>
  <title>Profile Page | User</title>
</head>

<body>

  <!-- navigation -->
  <div class="navigation">
    <ul>
      <li class="list active">
        <a href="/dashboard">
          <span class="icon"><i class="fas fa-home"></i></span>
          <span class="title">Dashboard</span>
        </a>
      </li>

      <!-- <li class="list">
        <a href="#">
          <span class="icon"><i class="fas fa-hospital"></i></span>
          <span class="title">Hospitals near me</span>
        </a>
      </li> -->

      <li class="list">
        <a href="/appointment">
          <span class="icon"><i class="fas fa-calendar-check"></i></span>
          <span class="title">Appointment</span>
        </a>
      </li>
      <li class="list">
        <a href="/disease">
          <span class="icon"><i class="fas fa-search-plus"></i></span>
          <span class="title">Search Disease</span>
        </a>
      </li>
      <li class="list">
        <a href="/calorie_tracker">
          <span class="icon"><i class="fas fa-utensils"></i></span>
          <span class="title">Diet Tracker</span>
        </a>
      </li>
      <li class="list">
        <a href="/profile">
          <span class="icon"><i class="fas fa-user-cog"></i></span>
          <span class="title">Edit Profile</span>
        </a>
      </li>
      <li class="list">
        <a href="#">
          <span class="icon"><i class="far fa-question-circle"></i></span>
          <span class="title">Help</span>
        </a>
      </li>
      <li class="list">
        <a href="/auth/logout">
          <span class="icon"><i class="fas fa-sign-out-alt"></i></span>
          <span class="title">Sign Out</span>
        </a>
      </li>
    </ul>
  </div>
  <!-- end of navigation -->


  <div class="container">
    <div class="main-body">
      <div class="row gutters-sm">
        <div class="col-md-4 mb-3">
          <div class="card user_area p-5">
            <div class="card-body">
              <p class="d-flex flex-column align-items-center text-center" style="font-size: large; font-weight: 700;">
                My Details</p> <br>
              <div class="d-flex flex-column align-items-center text-center">
                <img src="https://www.kindpng.com/picc/m/78-785827_user-profile-avatar-login-account-male-user-icon.png"
                  alt="Admin" class="rounded-circle" width="150">
                <div style="font-size: smaller;">
                  <h4>
                    <%if(userDetails) {%>
                      <% if( foundUser.displayName) { %>
                        <p>
                          <%= foundUser.displayName%>
                        </p>
                        <% }%>
                  </h4>
                  <h4>
                    <% if( !userDetails ) { %>
                      <p>username@gmail.com</p>
                      <% }else{ %>
                        <p>
                          <%= userDetails.mail %>
                        </p>
                        <% } %>
                          <% } %>
                  </h4>
                  <button class="btn btn-outline-primary">Message</button>
                </div>
              </div>
            </div>
          </div>
          <div class="card mt-3 users_icon p-4">
            <img src="/undraw_Profile_re_4a55.png" class="Image_user p-3">
          </div>
        </div>
        <div class="col-md-8">
          <div class="card mb-3">
            <form action="/profile" method="POST" class="p-3 w-75 mx-auto">
              <div class="m-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" name="Name" autocomplete="off">
              </div>
              <div class="m-3">
                <label class="form-label">Phone</label>
                <input type="text" class="form-control" name="phone" autocomplete="off">
              </div>
              <div class="m-3">
                <label for="exampleInputEmail1" class="form-label">Email address</label>
                <input type="email" class="form-control" name="Email1" aria-describedby="emailHelp" autocomplete="off">
                <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
              </div>
              <div class="m-3">
                <label class="form-label">Address</label>
                <textarea class="form-control" name="address" autocomplete="off"></textarea>
              </div>
              <!-- gender -->
              <div class="m-3">
                <label class="form-label">Gender</label> <br>
                <input type="radio" id="male" name="gender" value="male">
                 <label for="male">Male</label>
                <input type="radio" id="female" name="gender" value="female">
                 <label for="female">Female</label>
              </div>
              <div class="m-3">
                <label for="Blood_grp" class="form-label">Blood Group</label>
                <input type="text" class="form-control" name="blood_grp" autocomplete="off">
              </div>
              <!-- end of gender -->
              <div class="m-3">
                <label for="Weight" class="form-label">Weight</label>
                <input type="number" class="form-control" name="Weight" autocomplete="off" placeholder="Weight in Kg">
              </div>
              <div class="m-3">
                <label for="Height" class="form-label">Height</label>
                <input type="number" class="form-control" name="Height" autocomplete="off" placeholder="Height in cm">
              </div>
              <button type="submit" class="btn3 btn-primary edit_button m-3">Save Changes</button>
            </form>
          </div>
        </div>
      </div>
      <div class="task-block">
        <div class="column1">
          <p class="user_data">
            Your Data
            <br><br>
          <div class="data">
            <div class="weight">
              <span>Weight(in Kg)</span> <br><br><br><br>
              <%if(userDetails) {%>
                <%= userDetails[0].weight %>
                  <% } %>
            </div>
            <div class="height">
              <span>Height(in cm)</span><br><br><br><br>
              <%if(userDetails) {%>
                <%= userDetails[0].height %>
                  <% } %>
            </div>
            <div class="bloodgrp">
              <span>Blood Group</span><br><br><br><br>
              <%if(userDetails) {%>
                <%= userDetails[0].bg %>
                  <% } %>
            </div>
            <div class="bmi">
              <span>BMI</span><br><br><br><br>
              <%if(userDetails) {%>
                <%= userDetails[0].BMI %>
                  <% } %>
            </div>
            <div class="bmi_status">
              <span>Weight Status</span><br><br><br><br>
              <%if(userDetails) {%>
                <%if(userDetails[0].BMI<18.5){%>
                  Underweight
                  <%} else if(userDetails[0].BMI>=18.5 && userDetails[0].BMI<=24.9){%>
                      Healthy
                      <%} else if(userDetails[0].BMI>=25 && userDetails[0].BMI<=29.9){%>
                          OverWeight
                          <%} else if(userDetails[0].BMI>=30){%>
                            Obese
                            <%}%>
                              <% } %>
            </div>
          </div>
          </p>
        </div>
      </div>
    </div>
  </div>
  <script src="../navigation.js"></script>
</body>

</html>